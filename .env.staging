# Staging Environment Configuration
# For testing before production deployment

# Database settings
DB_URL=sqlite:///./data/wpg_engine_staging.db
DB_ECHO=true

# Telegram bot settings (use test bot)
TG_TOKEN=your_staging_telegram_bot_token_here
TG_WEBHOOK_URL=https://your-staging-domain.com/webhook
TG_ADMIN_ID=your_telegram_admin_id_here

# VK bot settings (optional)
VK_TOKEN=your_staging_vk_bot_token_here
VK_GROUP_ID=your_staging_vk_group_id_here

# AI settings (can use same as prod or separate)
AI_OPENROUTER_API_KEY=your_openrouter_api_key_here
AI_DEFAULT_MODEL=anthropic/claude-3-haiku

# Application settings
DEBUG=true
LOG_LEVEL=DEBUG

# Yandex Cloud settings (for deployment scripts)
YC_REGISTRY_ID=your_yandex_registry_id
YC_INSTANCE_IP=your_staging_server_ip
YC_INSTANCE_USER=your_server_username
YC_INSTANCE_NAME=your_staging_instance_name
YC_CLOUD_ID=your_cloud_id
YC_FOLDER_ID=your_folder_id