# Production Environment Configuration
# Copy this file and rename to .env for production use

# Database settings
DB_URL=sqlite:///./data/wpg_engine.db
DB_ECHO=false

# Telegram bot settings
TG_TOKEN=your_production_telegram_bot_token_here
TG_WEBHOOK_URL=https://your-production-domain.com/webhook
TG_ADMIN_ID=your_telegram_admin_id_here

# VK bot settings (optional)
VK_TOKEN=your_vk_bot_token_here
VK_GROUP_ID=your_vk_group_id_here

# AI settings
AI_OPENROUTER_API_KEY=your_openrouter_api_key_here
AI_DEFAULT_MODEL=anthropic/claude-3-haiku

# Application settings
DEBUG=false
LOG_LEVEL=INFO

# Yandex Cloud settings (for deployment scripts)
YC_REGISTRY_ID=your_yandex_registry_id
YC_INSTANCE_IP=your_server_ip
YC_INSTANCE_USER=your_server_username
YC_INSTANCE_NAME=your_instance_name
YC_CLOUD_ID=your_cloud_id
YC_FOLDER_ID=your_folder_id